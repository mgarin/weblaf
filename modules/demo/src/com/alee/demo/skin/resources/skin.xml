<skin>

    <!-- Skin information (not necessary) -->
    <id>weblaf.demo.skin</id>
    <title>WebLaF Demo Application skin</title>
    <description>WebLaF Demo Application custom skin</description>
    <author>Mikle Garin</author>
    <supportedSystems>all</supportedSystems>

    <!-- Base skin class, included resources with no specified "nearClass" attribute will use this class -->
    <class>com.alee.demo.skin.DemoApplicationSkin</class>

    <!-- Including WebLaF default skin, will use its style as a base -->
    <include nearClass="com.alee.skin.web.WebSkin">resources/skin.xml</include>

    <!-- General styles -->
    <include>resources/general.xml</include>

    <!-- Examples frame -->
    <include>resources/examples.xml</include>

    <!-- Single example panel -->
    <include>resources/example.xml</include>

    <!-- Single preview panel -->
    <include>resources/preview.xml</include>

</skin>