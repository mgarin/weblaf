<skin>

    <!-- Toolbar text -->
    <style type="toolbar" id="tool" extends="attached" padding="4" />
    <style type="label" id="tool" margin="0,6,0,0" />
    <style type="toolbarseparator" id="tool" margin="0,4,0,4" />

    <!-- Example information bar -->
    <style type="panel" id="info-bar" extends="decorated" padding="6,6,6,6">
        <painter class="com.alee.managers.style.skin.web.WebPanelPainter">
            <decorations>
                <decoration round="2">
                    <sides>0,0,1,0</sides>
                    <BasicShade type="outer" width="0" />
                    <LineBorder color="170,170,170" />
                    <ColorBackground color="white" />
                </decoration>
            </decorations>
        </painter>
    </style>

    <!-- Panel with all previews -->
    <style type="panel" id="previews">
        <painter class="com.alee.managers.style.skin.web.WebPanelPainter">
            <decorations>
                <decoration round="0">
                    <BasicShade type="inner" width="15" />
                    <ColorBackground color="white" />
                </decoration>
            </decorations>
        </painter>
    </style>

    <!-- Skin selectors panel -->
    <style type="panel" id="skin-selectors">
        <painter class="com.alee.managers.style.skin.web.WebPanelPainter">
            <decorations>
                <decoration round="0">
                    <sides>0,0,1,0</sides>
                    <LineBorder color="170,170,170" />
                    <ColorBackground color="white" />
                </decoration>
            </decorations>
        </painter>

        <!-- Skin selector button -->
        <style type="togglebutton" id="skin-selector">
            <painter class="com.alee.managers.style.skin.web.WebButtonPainter">
                <decorations>
                    <decoration round="0">
                        <BasicShade type="outer" width="0" />
                    </decoration>
                </decorations>
            </painter>
        </style>

    </style>

</skin>