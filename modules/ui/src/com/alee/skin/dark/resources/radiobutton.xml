<skin xmlns="http://weblookandfeel.com/XmlSkin">

    <!-- com.alee.laf.radiobutton.WebRadioButton -->

    <!-- Radio button -->
    <style type="radiobutton">
        <component>
            <foreground>245,245,245</foreground>
        </component>
        <painter>
            <decorations>
                <decoration>
                    <ButtonLayout>
                        <SimpleButtonIcon constraints="icon" />
                        <ButtonText constraints="text" />
                    </ButtonLayout>
                </decoration>
                <decoration states="disabled">
                    <ButtonLayout>
                        <ButtonText color="180,180,180" ignoreCustomColor="true" />
                    </ButtonLayout>
                </decoration>
            </decorations>

            <!-- Radio state painter -->
            <checkStatePainter>
                <decorations>
                    <decoration size="17,17">
                        <EllipseShape />
                        <WebShadow type="outer" width="2" />
                        <LineBorder color="20,20,20" />
                        <GradientBackground type="radial" from="0.5,0.5" to="2,0.5">
                            <color>77,81,83</color>
                            <color>black</color>
                        </GradientBackground>
                    </decoration>
                    <decoration states="checked">
                        <RadioIcon padding="2" leftColor="255,255,255,225" rightColor="255,255,255,235" />
                    </decoration>
                    <decoration states="focused">
                        <LineBorder color="black" />
                    </decoration>
                    <decoration states="disabled">
                        <WebShadow type="outer" opacity="0" />
                        <LineBorder color="68,72,74" />
                        <ColorBackground color="80,80,80" />
                    </decoration>
                    <decoration states="disabled,checked">
                        <RadioIcon padding="2" leftColor="120,120,120" rightColor="130,130,130" />
                    </decoration>
                </decorations>
            </checkStatePainter>

        </painter>
    </style>

    <!-- Radio button supporting styled text -->
    <style type="radiobutton" id="styled">
        <painter>
            <decorations>
                <decoration>
                    <ButtonLayout>
                        <StyledButtonText constraints="text" />
                    </ButtonLayout>
                </decoration>
                <decoration states="disabled">
                    <ButtonLayout>
                        <StyledButtonText color="180,180,180" ignoreCustomColor="true" ignoreStyleColors="true" />
                    </ButtonLayout>
                </decoration>
            </decorations>
        </painter>
    </style>

    <!-- Link-like radio button -->
    <style type="radiobutton" id="link" extends="styled">
        <painter>
            <decorations>
                <decoration cursor="hand" />
                <decoration states="enabled,hover">
                    <ButtonLayout>
                        <StyledButtonText globalStyle="u" />
                    </ButtonLayout>
                </decoration>
            </decorations>
        </painter>
    </style>

</skin>