<skin xmlns="http://weblookandfeel.com/XmlSkin">

    <!-- com.alee.laf.menu.WebMenuItem -->

    <!-- Menu item -->
    <style type="menuitem">
        <component>
            <opaque>false</opaque>
            <foreground>245,245,245</foreground>
        </component>
        <painter>
            <decorations>
                <decoration>
                    <WebShape round="0" />
                    <MenuItemLayout padding="5,10,5,8" iconTextGap="6" textAcceleratorGap="20">
                        <ButtonIcon constraints="icon" />
                        <ButtonText constraints="text" />
                        <RoundRectangle constraints="accelerator" round="4" opacity="0">
                            <ColorBackground color="80,80,80" />
                        </RoundRectangle>
                        <AcceleratorText constraints="accelerator" padding="0,4,0,4" color="225,225,225" />
                    </MenuItemLayout>
                </decoration>
                <decoration states="selected">
                    <GradientBackground>
                        <color>72,72,72</color>
                        <color>60,60,60</color>
                    </GradientBackground>
                    <MenuItemLayout>
                        <RoundRectangle opacity="1" />
                    </MenuItemLayout>
                </decoration>
                <decoration states="disabled">
                    <MenuItemLayout>
                        <ButtonText color="180,180,180" ignoreCustomColor="true" />
                        <AcceleratorText color="180,180,180" />
                    </MenuItemLayout>
                </decoration>
            </decorations>
        </painter>
    </style>

    <!-- Menu item supporting styled text -->
    <style type="button" id="styled">
        <painter>
            <decorations>
                <decoration>
                    <MenuItemLayout>
                        <StyledButtonText constraints="text" />
                    </MenuItemLayout>
                </decoration>
                <decoration states="disabled">
                    <MenuItemLayout>
                        <StyledButtonText color="180,180,180" ignoreCustomColor="true" ignoreStyleColors="true" />
                    </MenuItemLayout>
                </decoration>
            </decorations>
        </painter>
    </style>

</skin>