<skin xmlns="http://weblookandfeel.com/XmlSkin">

    <!-- com.alee.laf.menu.WebMenuItem -->

    <!-- Menu item -->
    <style type="menuitem">
        <component>
            <opaque>false</opaque>
            <foreground>black</foreground>
        </component>
        <painter>
            <decorations>
                <decoration>
                    <WebShape round="0" />
                    <MenuItemLayout padding="5,10,5,8" iconTextGap="6" textAcceleratorGap="20">
                        <ButtonIcon constraints="icon" />
                        <ButtonText constraints="text" />
                        <RoundRectangle constraints="accelerator" round="4" opacity="0">
                            <ColorBackground color="240,240,240" />
                        </RoundRectangle>
                        <AcceleratorText constraints="accelerator" padding="0,4,0,4" color="90,90,90" />
                    </MenuItemLayout>
                </decoration>
                <decoration states="selected">
                    <GradientBackground>
                        <color>208,208,198</color>
                        <color>196,196,186</color>
                    </GradientBackground>
                    <MenuItemLayout>
                        <RoundRectangle opacity="1" />
                    </MenuItemLayout>
                </decoration>
                <decoration states="disabled">
                    <MenuItemLayout>
                        <ButtonText color="120,120,120" ignoreCustomColor="true" />
                        <AcceleratorText color="120,120,120" />
                    </MenuItemLayout>
                </decoration>
            </decorations>
        </painter>
    </style>

    <!-- Menu item supporting styled text -->
    <style type="button" id="styled">
        <painter>
            <decorations>
                <decoration>
                    <MenuItemLayout>
                        <StyledButtonText constraints="text" />
                    </MenuItemLayout>
                </decoration>
                <decoration states="disabled">
                    <MenuItemLayout>
                        <StyledButtonText color="120,120,120" ignoreCustomColor="true" ignoreStyleColors="true" />
                    </MenuItemLayout>
                </decoration>
            </decorations>
        </painter>
    </style>

</skin>