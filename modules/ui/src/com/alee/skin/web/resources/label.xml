<skin xmlns="http://weblookandfeel.com/XmlSkin">

    <!-- com.alee.laf.label.WebLabel -->

    <!-- Label -->
    <style type="label">
        <painter>
            <decorations>
                <decoration>
                    <LabelLayout>
                        <LabelIcon constraints="icon" />
                        <LabelText constraints="text" color="black" />
                    </LabelLayout>
                </decoration>
                <decoration states="disabled">
                    <LabelLayout>
                        <LabelText color="120,120,120" />
                    </LabelLayout>
                </decoration>
            </decorations>
        </painter>
    </style>

    <!-- Label containing only icon -->
    <style type="label" id="icon">
        <painter>
            <decorations overwrite="true">
                <decoration>
                    <LabelIcon />
                </decoration>
            </decorations>
        </painter>
    </style>

    <!-- Label with text shadow -->
    <style type="label" id="shadow">
        <painter>
            <decorations>
                <decoration>
                    <LabelLayout>
                        <LabelText shadow="true" shadowColor="200,200,200" />
                    </LabelLayout>
                </decoration>
            </decorations>
        </painter>
    </style>

    <!-- Vertical label -->
    <style type="label" id="vertical-ccw">
        <painter>
            <decorations>
                <decoration>
                    <LabelLayout rotation="counterClockwise" />
                </decoration>
            </decorations>
        </painter>
    </style>
    <style type="label" id="vertical-cw">
        <painter>
            <decorations>
                <decoration>
                    <LabelLayout rotation="clockwise" />
                </decoration>
            </decorations>
        </painter>
    </style>

    <!-- Label with tag decoration -->
    <style type="label" id="tag" padding="2,5,2,5">
        <painter>
            <decorations>
                <decoration>
                    <WebShape round="3" />
                    <LineBorder color="185,185,185" />
                    <ColorBackground color="237,237,237" />
                </decoration>
            </decorations>
        </painter>
    </style>

    <!-- Separator label -->
    <style type="label" id="separator">
        <painter>
            <decorations>
                <decoration>
                    <LabelLayout>
                        <Stripes constraints="left-space" id="left-space" orientation="horizontal" padding="0,0,0,4" size="10,1">
                            <Stripe>
                                <color>200,200,200</color>
                            </Stripe>
                        </Stripes>
                        <Stripes constraints="right-space" id="right-space" orientation="horizontal" padding="0,4,0,0" size="10,1">
                            <Stripe>
                                <color>200,200,200</color>
                            </Stripe>
                        </Stripes>
                    </LabelLayout>
                </decoration>
            </decorations>
        </painter>
    </style>

</skin>