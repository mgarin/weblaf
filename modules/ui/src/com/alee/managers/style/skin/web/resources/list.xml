<skin>

    <!-- com.alee.laf.list.WebList -->

    <!-- todo List selection painter -->

    <!-- List -->
    <style type="list">
        <component>
            <opaque>true</opaque>
            <background>white</background>
            <foreground>black</foreground>
        </component>
        <painter class="WebListPainter">
            <selectionRound>2</selectionRound>
            <selectionShadeWidth>2</selectionShadeWidth>
            <selectionBorderColor>gray</selectionBorderColor>
            <selectionBackgroundColor>223,223,223</selectionBackgroundColor>
            <decorateSelection>true</decorateSelection>
            <webColoredSelection>true</webColoredSelection>
        </painter>

        <!-- Default cell renderer label -->
        <style type="styledlabel" id="renderer" />

        <!-- Text cell renderer label -->
        <style type="styledlabel" id="text-renderer" extends="renderer" padding="4,6,4,4" />

        <!-- Icon cell renderer label -->
        <style type="styledlabel" id="icon-renderer" extends="renderer" padding="4,4,4,4" />

        <!-- Default cell editor field -->
        <style type="textfield" id="editor" extends="unfocusable" />

    </style>

</skin>