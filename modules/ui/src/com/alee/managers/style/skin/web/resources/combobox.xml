<skin>

    <!-- com.alee.laf.combobox.WebComboBox -->

    <!-- Combobox -->
    <style type="comboBox">
        <component>
            <opaque>false</opaque>
            <focusable>true</focusable>
        </component>
        <painter class="WebComboBoxPainter">
            <undecorated>false</undecorated>
            <round>2</round>
            <shadeWidth>2</shadeWidth>
            <paintFocus>true</paintFocus>
            <webColoredBackground>true</webColoredBackground>
            <iconSpacing>3</iconSpacing>
            <expandedBgColor>223,220,213</expandedBgColor>
            <selectedMenuTopBg>208,208,198</selectedMenuTopBg>
            <selectedMenuBottomBg>196,196,186</selectedMenuBottomBg>
        </painter>

        <!-- Default editor -->
        <style type="textField" id="editor" extends="undecorated" />

        <!-- Arrow button -->
        <style type="button" id="arrow">
            <component>
                <focusable>false</focusable>
            </component>
            <painter class="WebButtonPainter">
                <undecorated>true</undecorated>
                <paintFocus>false</paintFocus>
                <moveIconOnPress>false</moveIconOnPress>
                <leftRightSpacing>3</leftRightSpacing>
            </painter>
        </style>

        <!-- Popup list scrollpane -->
        <style type="scrollPane" id="popup.scrollpane" extends="popup" />

        <!-- Popup list component -->
        <style type="list" id="popup.list">
            <ui>
                <highlightRolloverCell>false</highlightRolloverCell>
            </ui>
            <painter class="WebListPainter">
                <decorateSelection>false</decorateSelection>
            </painter>

            <!-- Selected value label -->
            <style type="label" id="box.renderer" padding="2,2,2,2" />

            <!-- Popup list value label -->
            <style type="label" id="list.renderer" padding="4,6,4,6">
                <painter class="WebComboBoxElementPainter">
                    <topSelectedBackgroundColor>208,208,198</topSelectedBackgroundColor>
                    <bottomSelectedBackgroundColor>196,196,186</bottomSelectedBackgroundColor>
                </painter>
            </style>

        </style>

    </style>

    <!-- Undecorated combobox -->
    <style type="comboBox" id="undecorated">
        <painter class="WebComboBoxPainter">
            <undecorated>true</undecorated>
        </painter>
    </style>

</skin>