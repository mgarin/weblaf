<skin>

    <!-- com.alee.laf.spinner.WebSpinner -->

    <!-- Spinner -->
    <style type="spinner">
        <component>
            <opaque>false</opaque>
            <background>255,255,255</background>
        </component>
        <painter class="WebSpinnerPainter">
            <round>4</round>
            <shadeWidth>2</shadeWidth>
        </painter>

        <!-- Buttons -->
        <style type="button" id="button">
            <component>
                <focusable>false</focusable>
            </component>
            <painter class="WebButtonPainter">
                <round>2</round>
                <shadeWidth>1</shadeWidth>
                <innerShadeWidth>2</innerShadeWidth>
                <leftRightSpacing>1</leftRightSpacing>
            </painter>
        </style>
        <style type="button" id="next" extends="button" />
        <style type="button" id="previous" extends="button" />

        <!-- Editor field -->
        <style type="formattedTextField" id="editor" extends="undecorated" />

    </style>

</skin>