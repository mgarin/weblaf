<skin>

    <!-- com.alee.laf.button.WebToggleButton -->

    <!-- Toggle button -->
    <style type="togglebutton" padding="2,4,2,4">
        <component>
            <foreground>black</foreground>
            <horizontalAlignment>0</horizontalAlignment>
            <verticalAlignment>0</verticalAlignment>
        </component>
        <painter class="WebToggleButtonPainter">
            <selectedForeground>black</selectedForeground>
            <decorations>
                <decoration round="3">
                    <BasicShade type="outer" width="2" />
                    <LineBorder color="170,170,170" />
                    <GradientBackground type="linear" from="0,0" to="0,1">
                        <color>white</color>
                        <color>223,223,223</color>
                    </GradientBackground>
                </decoration>
                <decoration states="selected">
                    <BasicShade type="outer" transparency="0" />
                    <BasicShade type="inner" width="5" />
                    <ColorBackground color="220,220,220" />
                </decoration>
                <decoration states="focused">
                    <LineBorder color="85,130,190" />
                </decoration>
                <decoration states="pressed">
                    <BasicShade type="outer" transparency="0" />
                    <BasicShade type="inner" width="5" />
                    <ColorBackground color="210,210,210" />
                </decoration>
                <decoration states="disabled">
                    <BasicShade type="outer" transparency="0" />
                    <LineBorder color="lightGray" />
                </decoration>
            </decorations>
        </painter>
    </style>

    <!-- Icon-only toggle button -->
    <style type="togglebutton" id="icon" padding="2">
        <painter class="WebToggleButtonPainter">
            <decorations>
                <decoration round="3" />
            </decorations>
        </painter>
    </style>

    <!-- Rollover-decorated-only toggle button -->
    <style type="togglebutton" id="rollover">
        <painter class="WebToggleButtonPainter">
            <decorations>
                <decoration transparency="0" />
                <decoration states="focused">
                    <LineBorder color="170,170,170" />
                </decoration>
                <decoration states="hover" transparency="1" />
                <decoration states="pressed" transparency="1" />
                <decoration states="selected" transparency="1" />
            </decorations>
        </painter>
    </style>

    <!-- Icon-only and rollover-decorated-only toggle button -->
    <style type="togglebutton" id="icon-rollover" extends="icon">
        <painter class="WebToggleButtonPainter">
            <decorations>
                <decoration transparency="0" />
                <decoration states="focused">
                    <LineBorder color="170,170,170" />
                </decoration>
                <decoration states="hover" transparency="1" />
                <decoration states="pressed" transparency="1" />
                <decoration states="selected" transparency="1" />
            </decorations>
        </painter>
    </style>

</skin>