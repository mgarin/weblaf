<skin>

    <!-- com.alee.extended.filechooser.WebFileChooserField -->

    <!-- File chooser field -->
    <style type="panel" id="filechooserfield" padding="-1,-1,-1,-1">
        <component>
            <opaque>false</opaque>
            <background>white</background>
        </component>
        <painter class="WebPanelPainter">
            <undecorated>false</undecorated>
            <round>2</round>
            <webColoredBackground>true</webColoredBackground>
            <paintFocus>true</paintFocus>
        </painter>

        <!-- Selected files panel -->
        <style type="panel" id="content" extends="transparent" />

        <!-- Selected files scroll -->
        <style type="scrollpane" id="scroll" padding="1,1,1,1">
            <component>
                <verticalScrollBarPolicy>21</verticalScrollBarPolicy>
                <horizontalScrollBarPolicy>31</horizontalScrollBarPolicy>
            </component>
            <painter class="WebScrollPanePainter">
                <undecorated>true</undecorated>
            </painter>
        </style>

        <!-- Selected file plate -->
        <style type="panel" id="file" padding="0,3,0,1">
            <component>
                <focusable>true</focusable>
            </component>
            <painter class="WebPanelPainter">
                <undecorated>false</undecorated>
                <round>2</round>
                <shadeWidth>0</shadeWidth>
                <paintFocus>true</paintFocus>
                <paintTop>false</paintTop>
                <paintLeft>false</paintLeft>
                <paintBottom>false</paintBottom>
            </painter>

            <!-- Name label -->
            <style type="label" id="name" padding="0,0,0,2" />

            <!-- Remove button -->
            <style type="button" id="remove">
                <component>
                    <focusable>false</focusable>
                </component>
                <painter class="WebButtonPainter">
                    <round>2</round>
                    <shadeWidth>2</shadeWidth>
                    <rolloverDecoratedOnly>true</rolloverDecoratedOnly>
                    <webColoredBackground>true</webColoredBackground>
                    <leftRightSpacing>0</leftRightSpacing>
                    <innerShadeWidth>2</innerShadeWidth>
                </painter>
            </style>

        </style>

        <!-- File choose button -->
        <style type="button" id="choose">
            <component>
                <focusable>false</focusable>
            </component>
            <painter class="WebButtonPainter">
                <round>2</round>
                <shadeWidth>0</shadeWidth>
                <paintBackground>true</paintBackground>
                <webColoredBackground>true</webColoredBackground>
                <leftRightSpacing>2</leftRightSpacing>
                <rolloverDarkBorderOnly>false</rolloverDarkBorderOnly>
                <paintLeft>false</paintLeft>
                <paintLeftLine>true</paintLeftLine>
            </painter>
        </style>

    </style>

</skin>